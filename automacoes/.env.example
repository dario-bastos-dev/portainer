# =============================================================================
# CONFIGURAÇÕES DO N8N
# =============================================================================
# Basic Configuration
N8N_HOST=seu-dominio.com
N8N_PROTOCOL=https
WEBHOOK_URL=https://seu-dominio.com
GENERIC_TIMEZONE=America/Sao_Paulo

# Security - IMPORTANT: Generate a secure key!
# You can generate one with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=your_64_character_encryption_key_here

# Redis Configuration
REDIS_DB=0

# Queue Mode Settings
WORKER_CONCURRENCY=5

# =============================================================================
# CONFIGURAÇÕES DO TYPEBOT
# =============================================================================

# Basic Configuration
ENCRYPTION_SECRET=your_32_character_encryption_key_here

# Database Configuration
DATABASE_USER=postgres
DATABASE_PASSWORD=post_password
DATABASE_HOST=typebot-db
DATABASE_NAME=typebot

# URLs Configuration
NEXTAUTH_URL=typebot.<YOUR_DOMAIN>
NEXT_PUBLIC_VIEWER_URL=bot.<YOUR_DOMAIN>

# Admin Configuration
ADMIN_EMAIL=<YOUR_EMAIL>

# Onboarding Typebot ID
NEXT_PUBLIC_ONBOARDING_TYPEBOT_ID=<YOUR_ONBOARDING_ID>

# Google OAuth Configuration
GOOGLE_AUTH_CLIENT_ID=<YOUR_GOOGLE_CLIENT_ID>
GOOGLE_AUTH_CLIENT_SECRET=<YOUR_GOOGLE_CLIENT_SECRET>

# S3 Configuration
S3_ACCESS_KEY=<YOUR_S3_ACCESS_KEY>
S3_SECRET_KEY=<YOUR_S3_SECRET_KEY>
S3_PORT=<YOUR_S3_PORT>
S3_ENDPOINT=<YOUR_S3_ENDPOINT>
S3_REGION=<YOUR_S3_REGION>

# Telemetry
MESSAGE_WEBHOOK_URL=<YOUR_MESSAGE_WEBHOOK_URL>
USER_CREATED_WEBHOOK_URL=<YOUR_USER_CREATED_WEBHOOK_URL>

# Gmail SMTP Configuration
SMTP_USERNAME=<YOUR_SMTP_USERNAME>
SMTP_PASSWORD=<YOUR_SMTP_PASSWORD>
SMTP_HOST=<YOUR_SMTP_HOST>
SMTP_PORT=<YOUR_SMTP_PORT>
NEXT_PUBLIC_SMTP_FROM="'Typebot Notifications' <notifications@host.com>"
SMTP_SECURE=<YOUR_SMTP_SECURE>
SMTP_IGNORE_TLS=<YOUR_SMTP_IGNORE_TLS>
SMTP_AUTH_DISABLED=<YOUR_SMTP_AUTH_DISABLED>